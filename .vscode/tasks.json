// A task runner that calls a custom npm script that compiles the extension.
{
	"version": "2.0.0",
	"type": "shell",
	"command": "yarn",
	"args": ["compile"],
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": false
	},
	"echoCommand": true,
	"isBackground": true,
	"group": "build"
}
